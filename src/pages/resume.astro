---
import MainLayout from '../layouts/MainLayout.astro';

// Work experience data
const experiences = [
  {
    position: 'Senior Developer',
    company: 'Tech Solutions Inc.',
    location: 'San Francisco, CA',
    period: 'Jan 2022 - Present',
    description: 'Lead the development of web applications for clients in various industries. Implement best practices for code quality and performance.',
    responsibilities: [
      'Developed and maintained client websites using React and Node.js',
      'Collaborated with designers to implement responsive UI/UX designs',
      'Improved website performance by 40% through code optimization',
      'Mentored junior developers and conducted code reviews'
    ]
  },
  {
    position: 'Web Developer',
    company: 'Digital Creators',
    location: 'Austin, TX',
    period: 'May 2019 - Dec 2021',
    description: 'Worked on frontend and backend development for e-commerce platforms.',
    responsibilities: [
      'Built responsive websites with HTML, CSS, and JavaScript',
      'Implemented RESTful APIs using Express.js',
      'Integrated payment gateways and shipping services',
      'Optimized database queries to improve application speed'
    ]
  },
  {
    position: 'Junior Developer',
    company: 'StartUp Innovations',
    location: 'Remote',
    period: 'Aug 2017 - Apr 2019',
    description: 'Assisted in the development of mobile-responsive web applications.',
    responsibilities: [
      'Developed UI components using React',
      'Fixed bugs and improved existing features',
      'Participated in daily stand-ups and sprint planning',
      'Created technical documentation'
    ]
  }
];

// Education data
const education = [
  {
    degree: 'Bachelor of Science in Computer Science',
    institution: 'University of Technology',
    location: 'New York, NY',
    period: '2013 - 2017',
    description: 'Graduated with honors. Focused on web development and software engineering.'
  },
  {
    degree: 'Full Stack Web Development Bootcamp',
    institution: 'Code Academy',
    location: 'Online',
    period: 'Jan 2018 - Apr 2018',
    description: 'Intensive 12-week program covering modern web development technologies.'
  }
];

// Skills data grouped by category
const skillsByCategory = [
  {
    category: 'Programming Languages',
    skills: ['JavaScript', 'TypeScript', 'Python', 'HTML', 'CSS', 'SQL']
  },
  {
    category: 'Frameworks & Libraries',
    skills: ['React', 'Node.js', 'Express', 'Vue.js', 'Next.js', 'Django', 'Astro']
  },
  {
    category: 'Tools & Platforms',
    skills: ['Git', 'GitHub', 'VS Code', 'Docker', 'AWS', 'Firebase', 'Netlify', 'Vercel']
  },
  {
    category: 'Databases',
    skills: ['MongoDB', 'PostgreSQL', 'MySQL', 'Redis']
  }
];
---

<MainLayout title="Resume" description="My professional experience, education, and skills.">
  <section class="resume-header">
    <h1>My Resume</h1>
    <p>
      Here's a summary of my professional experience, education, and skills.
      For a printable version, you can download my full resume below.
    </p>
    <a href="/resume.pdf" class="btn" download>Download Resume (PDF)</a>
  </section>

  <!-- Work Experience -->
  <section class="resume-section">
    <h2>Work Experience</h2>
    <div class="timeline">
      {experiences.map((exp) => (
        <div class="timeline-item">
          <div class="timeline-header">
            <div class="timeline-info">
              <h3>{exp.position}</h3>
              <p class="timeline-company">{exp.company} | {exp.location}</p>
              <p class="timeline-period">{exp.period}</p>
            </div>
          </div>
          <div class="timeline-content">
            <p>{exp.description}</p>
            <ul>
              {exp.responsibilities.map((resp) => (
                <li>{resp}</li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Education -->
  <section class="resume-section">
    <h2>Education</h2>
    <div class="timeline">
      {education.map((edu) => (
        <div class="timeline-item">
          <div class="timeline-header">
            <div class="timeline-info">
              <h3>{edu.degree}</h3>
              <p class="timeline-company">{edu.institution} | {edu.location}</p>
              <p class="timeline-period">{edu.period}</p>
            </div>
          </div>
          <div class="timeline-content">
            <p>{edu.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills -->
  <section class="resume-section">
    <h2>Skills & Expertise</h2>
    <div class="skills-container">
      {skillsByCategory.map((category) => (
        <div class="skill-category">
          <h3>{category.category}</h3>
          <div class="skills-grid">
            {category.skills.map((skill) => (
              <div class="skill-item">{skill}</div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Certifications -->
  <section class="resume-section">
    <h2>Certifications</h2>
    <ul class="certifications-list">
      <li>
        <span class="cert-name">AWS Certified Developer</span>
        <span class="cert-date">2023</span>
      </li>
      <li>
        <span class="cert-name">MongoDB Certified Developer</span>
        <span class="cert-date">2022</span>
      </li>
      <li>
        <span class="cert-name">Google Professional Web Developer</span>
        <span class="cert-date">2021</span>
      </li>
    </ul>
  </section>
</MainLayout>

<style>
  .resume-header {
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 2rem;
  }
  
  .resume-header p {
    max-width: 800px;
    margin-bottom: 1.5rem;
  }
  
  .resume-section {
    margin-bottom: 3rem;
  }
  
  .timeline {
    margin-top: 1.5rem;
  }
  
  .timeline-item {
    border-left: 2px solid var(--color-primary);
    padding-left: 1.5rem;
    padding-bottom: 2rem;
    position: relative;
  }
  
  .timeline-item:last-child {
    padding-bottom: 0;
  }
  
  .timeline-item::before {
    content: '';
    position: absolute;
    left: -9px;
    top: 0;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: var(--color-primary);
  }
  
  .timeline-header {
    margin-bottom: 1rem;
  }
  
  .timeline-info h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }
  
  .timeline-company, .timeline-period {
    margin: 0;
    color: var(--color-text-light);
  }
  
  .timeline-period {
    font-style: italic;
    font-size: 0.9rem;
  }
  
  .timeline-content p {
    margin-bottom: 0.75rem;
  }
  
  .timeline-content ul {
    padding-left: 1.25rem;
  }
  
  .timeline-content li {
    margin-bottom: 0.5rem;
  }
  
  .skills-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .skill-category h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  
  .skill-item {
    background-color: #f0f0f0;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }
  
  .certifications-list {
    list-style: none;
    padding: 0;
  }
  
  .certifications-list li {
    display: flex;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .cert-name {
    font-weight: 500;
  }
  
  .cert-date {
    color: var(--color-text-light);
  }
  
  @media (max-width: 768px) {
    .skills-container {
      grid-template-columns: 1fr;
    }
  }
</style>